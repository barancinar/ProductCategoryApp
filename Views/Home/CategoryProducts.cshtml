@model List<ProductCategoryApp.Models.Product>
@{
    ViewData["Title"] = "Products";
}
<h2>Products</h2>

<div>
    @foreach (var product in Model)
    {
        <div class="card p-2 my-3">
            <img src="@product.Thumbnail" alt="@product.Title" width="150" class="img-thumbnail">
            <div class="card-body">
                <h3>@product.Title</h3>
                <p>@product.Description</p>
                <p class="fw-bold mb-1 h6">Price: @product.Price</p>
            </div>
        </div>
    }
</div>
